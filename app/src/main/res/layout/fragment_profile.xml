<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/drac_bg"
        tools:context=".ui.ProfileFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- User Avatar -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="100sp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        app:civ_border_color="#00FFFFFF"
                        android:background="@drawable/gradient_purple_cyan"
                        app:civ_border_width="4dp" />
                </androidx.cardview.widget.CardView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Rishabh Mehta"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/drac_purple"
                    android:textSize="25sp"
                    app:fontFamily="@font/fira_code_semibold"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Team Members"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/drac_gray"
                    android:textSize="18sp"
                    app:fontFamily="@font/fira_code_medium"
                    tools:ignore="HardcodedText" />

                <!-- Team Profiles -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginHorizontal="25dp"
                    android:backgroundTint="@color/drac_dark"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="5dp">

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:paddingVertical="10dp"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_columnWeight="1"
                                android:orientation="vertical">
                                <!-- User Avatar -->
                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top|center"
                                    app:cardCornerRadius="100sp">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/picTeammate1"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        app:civ_border_color="#00FFFFFF"
                                        android:background="@drawable/gradient_yellow_pink"
                                        app:civ_border_width="4dp"
                                        tools:ignore="TooDeepLayout" />
                                </androidx.cardview.widget.CardView>
                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"
                                    android:textColor="@color/drac_white"
                                    android:fontFamily="@font/fira_code"
                                    android:text="Johan"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                            <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:layout_columnWeight="0.66"
                            android:orientation="vertical">
                            <!-- User Avatar -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|center"
                                app:cardCornerRadius="100sp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/picTeammate2"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    app:civ_border_color="#00FFFFFF"
                                    android:background="@drawable/gradient_yellow_pink"
                                    app:civ_border_width="4dp"
                                    tools:ignore="TooDeepLayout" />
                            </androidx.cardview.widget.CardView>
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:textColor="@color/drac_white"
                                android:fontFamily="@font/fira_code"
                                android:text="Vedant"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                            <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">
                            <!-- User Avatar -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|center"
                                app:cardCornerRadius="100sp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/picTeammate3"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    app:civ_border_color="#00FFFFFF"
                                    android:background="@drawable/gradient_yellow_pink"
                                    app:civ_border_width="4dp"
                                    tools:ignore="TooDeepLayout" />
                            </androidx.cardview.widget.CardView>
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:textColor="@color/drac_white"
                                android:fontFamily="@font/fira_code"
                                android:text="Yash"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        </GridLayout>

                </androidx.cardview.widget.CardView>

                <!--  -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginHorizontal="25dp"
                    android:backgroundTint="@color/drac_dark"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:orientation="vertical">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/drac_gray"
                            android:text="Edit Profile"/>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dividerColor="@color/drac_bg"
                            app:dividerThickness="2dp"
                            app:dividerInsetStart="15dp"
                            app:dividerInsetEnd="15dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/drac_gray"
                            android:text="Scan QR Code"/>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dividerColor="@color/drac_bg"
                            app:dividerThickness="2dp"
                            app:dividerInsetStart="15dp"
                            app:dividerInsetEnd="15dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/drac_gray"
                            android:text="Contact Us"/>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dividerColor="@color/drac_bg"
                            app:dividerThickness="2dp"
                            app:dividerInsetStart="15dp"
                            app:dividerInsetEnd="15dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/drac_gray"
                            android:text="Logout"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>