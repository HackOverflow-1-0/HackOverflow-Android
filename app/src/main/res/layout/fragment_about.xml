<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/drac_bg"
    tools:context=".ui.AboutFragment">

    <ScrollView
        android:layout_width="392dp"
        android:layout_height="680dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/countDownTimerCard"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/drac_dark"
                app:cardCornerRadius="20dp">


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fira_code_semibold"
                    android:text="About Us"
                    android:textAlignment="center"
                    android:textColor="@color/drac_purple"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/collegecardview"
                android:layout_width="381dp"
                android:layout_height="476dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/drac_dark"
                app:cardCornerRadius="20dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/fira_code_semibold"
                    android:text="About College"
                    android:textAlignment="center"
                    android:textColor="@color/drac_purple"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="346dp"
                    android:layout_height="397dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="30dp"
                    android:justificationMode="inter_word"
                    android:text="@string/aboutcollege"
                    android:textColor="@color/drac_white"
                    android:textSize="16sp"
                    app:fontFamily="@font/fira_code"
                    tools:ignore="HardcodedText" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Abouthackoverflow"
                android:layout_width="383dp"
                android:layout_height="366dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/drac_dark"
                app:cardCornerRadius="20dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/fira_code_semibold"
                    android:text="About Hackoverflow"
                    android:textAlignment="center"
                    android:textColor="@color/drac_purple"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="346dp"
                    android:layout_height="397dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="75dp"
                    android:layout_marginRight="17dp"
                    android:justificationMode="inter_word"
                    android:text="@string/abouthackoverflow"
                    android:textColor="@color/drac_white"
                    android:textSize="16sp"
                    app:fontFamily="@font/fira_code"
                    tools:ignore="HardcodedText" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
