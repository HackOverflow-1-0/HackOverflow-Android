<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/drac_bg"
        tools:context=".ui.AboutFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="90dp">

                <!-- About Hackoverflow -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/about_hackoverflow_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/drac_dark"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/hackoverflow_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/fira_code_semibold"
                            android:text="HackOverflow"
                            android:textAlignment="center"
                            android:textColor="@color/drac_purple"
                            android:textSize="24sp"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:id="@+id/hof_logo"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            tools:ignore="ContentDescription" />

<!--                        <org.imaginativeworld.whynotimagecarousel.ImageCarousel-->
<!--                            android:id="@+id/college_carousel"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:background="@color/drac_dark"-->
<!--                            android:layout_marginHorizontal="10dp"-->
<!--                            app:imageScaleType="centerInside"-->
<!--                            app:imagePlaceholder="@drawable/logo_pillai"-->
<!--                            app:scalingFactor="0.3"-->
<!--                            app:autoPlayDelay="5000"-->
<!--                            app:infiniteCarousel="true"-->
<!--                            app:autoPlay="true"-->
<!--                            app:showNavigationButtons="false"-->
<!--                            app:showBottomShadow="false"-->
<!--                            app:showTopShadow="false"-->
<!--                            app:scaleOnScroll="true"-->
<!--                            app:carouselType="SHOWCASE"-->
<!--                            android:layout_height="300dp" />-->



                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="17dp"
                            android:layout_marginVertical="5dp"
                            android:justificationMode="inter_word"
                            android:text="@string/hof_about_1"
                            android:textColor="#C4FFBF"
                            android:textSize="13sp"
                            app:fontFamily="@font/fira_code" />
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="17dp"
                            android:layout_marginVertical="5dp"
                            android:justificationMode="inter_word"
                            android:text="@string/hof_about_2"
                            android:textColor="#FFE7C5"
                            android:textSize="13sp"
                            app:fontFamily="@font/fira_code" />
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="17dp"
                            android:layout_marginVertical="5dp"
                            android:justificationMode="inter_word"
                            android:text="@string/hof_about_3"
                            android:textColor="#FFC0DF"
                            android:textSize="13sp"
                            app:fontFamily="@font/fira_code" />
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="17dp"
                            android:layout_marginVertical="5dp"
                            android:justificationMode="inter_word"
                            android:text="@string/hof_about_4"
                            android:textColor="#C8BEFF"
                            android:textSize="13sp"
                            app:fontFamily="@font/fira_code" />

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:dividerColor="@color/drac_bg"
                            app:dividerInsetEnd="15dp"
                            app:dividerInsetStart="15dp"
                            app:dividerThickness="2dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/logoutBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Download Brochure"
                            android:textAlignment="center"
                            android:textColor="@color/drac_gray"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- About College -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/about_college_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/drac_dark"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/phcet_about_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/fira_code_semibold"
                            android:text="PHCET"
                            android:textAlignment="center"
                            android:textColor="@color/drac_purple"
                            android:textSize="24sp"
                            tools:ignore="HardcodedText" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="17dp"
                            android:layout_marginVertical="10dp"
                            android:justificationMode="inter_word"
                            android:text="@string/aboutCollege"
                            android:textColor="@color/drac_white"
                            android:textSize="14sp"
                            app:fontFamily="@font/fira_code" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
